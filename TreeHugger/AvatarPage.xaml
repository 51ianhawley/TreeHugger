            <Label x:Name="usernameLabel" Text="Set Your Username:" FontSize="Large"/>
            <Entry x:Name="usernameEntry" Completed="usernameEntry_Completed" FontSize="Medium"/>
        </HorizontalStackLayout>
        
        <GraphicsView Drawable="{StaticResource stickFigure}"
                              x:Name="Canvas"
                              HeightRequest="200"
                              WidthRequest="95"
                              HorizontalOptions="Center"/>
            <Button Text="equip" Clicked="Equip_Clicked"/>
        
        <Grid x:Name="_Grid" ColumnDefinitions="*,*">
                <VerticalStackLayout  Grid.Row="0" Grid.Column="0">
