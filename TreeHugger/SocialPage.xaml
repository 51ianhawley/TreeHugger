<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:model="clr-namespace:TreeHugger.Models"
             x:DataType="model:BusinessLogic" 
             x:Class="TreeHugger.SocialPage"
             Title="Social">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">

            <Label HorizontalTextAlignment="Start" Text="Airports" FontSize="Large"/>
            <Image x:Name="TestImage"/>
            <!-- This line says that the ItemsSource of the CollectionView is the Movies property of the Domain object (an ObservableCollection) -->
            <CollectionView x:Name="CV" ItemsSource="{Binding Trees}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Tree">
                        <VerticalStackLayout>
                            <Label Text="{Binding Id}" VerticalTextAlignment="Center"/>
                            <Label Text="{Binding Location}" VerticalTextAlignment="Center"/>
                            <Label Text="{Binding Lattiude}" VerticalTextAlignment="Center"/>
                            <Label Text="{Binding Longitude}" VerticalTextAlignment="Center" />
                            <Image x:Name="TestImage" Source="{Binding Image, Mode=OneWay, Converter={StaticResource ByteArrayToImageSourceConverter}}" />
                        </VerticalStackLayout>
                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
