<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:TreeHugger.Models"
             x:Class="TreeHugger.PostDetailsPage"
             Title="Post Details">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout x:Name="details">
        <Label Text="{Binding Id}" VerticalTextAlignment="Center"/>
        <Label Text="{Binding Location}" VerticalTextAlignment="Center"/>
        <Label Text="{Binding Lattiude}" VerticalTextAlignment="Center"/>
        <Label Text="{Binding Longitude}" VerticalTextAlignment="Center" />
        <Image Source="{Binding Image, Mode=OneWay, Converter={StaticResource ByteArrayToImageSourceConverter}}" />
    
        <ScrollView>
            <VerticalStackLayout>
            <CollectionView x:Name="comments" ItemsSource="{Binding Comments}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Comment">
                        <VerticalStackLayout 
                        VerticalOptions="Start">
                            <Label Text="{Binding Username}" VerticalTextAlignment="Center"/>
                            <Label Text="{Binding CommentText}" VerticalTextAlignment="Center"/>
                            <Label Text="{Binding TimePosted}" VerticalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
                <Editor x:Name="comment"
                Placeholder="Leave a comment"
                HeightRequest="100"/>
                <!--Completed="Comment_Completed"-->
                <Button Text="Send Comment" Clicked ="SendComment_Clicked" BackgroundColor="AliceBlue"/>
            </VerticalStackLayout>  
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>