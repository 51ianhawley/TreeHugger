<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:TreeHugger.Models"
             x:Class="TreeHugger.PostDetailsPage"
             Title="Post Details">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout >
        <Label Text="{Binding Id}" VerticalTextAlignment="Center"/>
        <Label Text="{Binding Location}" VerticalTextAlignment="Center"/>
        <Label Text="{Binding Lattiude}" VerticalTextAlignment="Center"/>
        <Label Text="{Binding Longitude}" VerticalTextAlignment="Center" />
        <Image Source="{Binding Image, Mode=OneWay, Converter={StaticResource ByteArrayToImageSourceConverter}}" />
    </VerticalStackLayout>
</ContentPage>